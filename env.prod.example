# Production-specific overrides for env.example
# Only define values that differ from local development defaults
# These values will be merged with env.example when running: npm run setup:prod

# Domain Configuration - Use HTTPS in production
DOMAIN_CLIENT=https://chat.ai.faktenforum.org

# Registration - Enabled but restricted to allowed domains (see config/librechat.prod.yaml)
LIBRECHAT_ALLOW_REGISTRATION=true

# Email Verification - Enabled in production
LIBRECHAT_ALLOW_UNVERIFIED_EMAIL_LOGIN=false

# Email - SendGrid SMTP for production
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_ENCRYPTION=starttls
EMAIL_USERNAME=apikey
EMAIL_PASSWORD=
EMAIL_FROM=no-reply@faktenforum.org
EMAIL_FROM_NAME=Faktenforum KI Chat
EMAIL_ALLOW_SELFSIGNED=false
