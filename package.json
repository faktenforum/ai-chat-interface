{
    "name": "ai-chat-interface",
    "description": "Infrastructure for AI Chat Interface with Traefik, LibreChat, and more",
    "type": "module",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "setup": "./scripts/setup-env.ts",
        "setup:yes": "./scripts/setup-env.ts --yes",
        "setup:prod": "./scripts/setup-env.ts --prod",
        "setup:prod:yes": "./scripts/setup-env.ts --prod --yes",
        "setup:dev": "./scripts/setup-env.ts --dev",
        "setup:dev:yes": "./scripts/setup-env.ts --dev --yes",
        "prepare:dev": "./scripts/prepare-dev-submodules.sh",
        "create:forks": "./scripts/create-faktenforum-branches.sh",
        "sync:forks": "./scripts/sync-fork-submodules.sh",
        "sync:forks:status": "./scripts/sync-fork-submodules.sh --status",
        "sync:forks:dry-run": "./scripts/sync-fork-submodules.sh --dry-run",
        "build:local": "docker compose -f docker-compose.local.yml --env-file .env.local build",
        "start:local": "docker compose -f docker-compose.local.yml --env-file .env.local up -d",
        "stop:local": "docker compose -f docker-compose.local.yml --env-file .env.local down",
        "restart:local": "docker compose -f docker-compose.local.yml --env-file .env.local restart",
        "build:local-source": "docker compose -f docker-compose.local-source.yml --env-file .env.local build",
        "start:local-source": "docker compose -f docker-compose.local-source.yml --env-file .env.local up -d",
        "stop:local-source": "docker compose -f docker-compose.local-source.yml --env-file .env.local down",
        "restart:local-source": "docker compose -f docker-compose.local-source.yml --env-file .env.local restart",
        "rebuild:local-source": "docker compose -f docker-compose.local-source.yml --env-file .env.local build --no-cache"
    },
    "license": "MIT",
    "devDependencies": {
        "@inquirer/prompts": "^8.2.0",
        "@types/node": "^25.0.9",
        "dotenv": "^17.2.3"
    }
}
